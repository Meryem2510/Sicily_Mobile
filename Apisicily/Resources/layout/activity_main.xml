<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ImageView pour le logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sicily_lines_logo" />
    
    <!-- TextView pour le titre -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titre de l'activitÃ©"
        android:layout_below="@id/logoImageView" />

    <Button
        android:id="@+id/authButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bouton d'authentification"
        android:layout_marginRight="0.0dp"
        android:layout_below="@+id/titleTextView" />
    <Button
    android:id="@+id/navigationButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bouton de navigation"
    android:layout_marginRight="0.0dp"
    android:layout_below="@+id/authButton" />
</RelativeLayout>
